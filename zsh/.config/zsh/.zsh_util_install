typeset -A utils
utils=(
  atuin atuin
  direnv direnv
  eza eza
  fzf fzf
  ifne moreutils
  mise mise
  rg ripgrep
  shellcheck shellcheck
  tmux tmux
  watch watch
)
to_install=()
for binary pkg in ${(@kv)utils}; do
  if ! command -v $binary &> /dev/null; then
    to_install+=$pkg
  fi
done

# Install nerd-fonts
if [[ "$(uname)" == 'Darwin' ]]; then
  if [[ ! -f "$HOME/Library/Fonts/HackNerdFont-Regular.ttf" ]]; then
    to_install+=font-hack-nerd-font
  fi
fi

if [[ "${#to_install[@]}" -eq 0 ]]; then
  return
fi

install-util() {
  case "$(uname -o)" in
    Darwin)
      brew install $*;;
    Android)
      pkg install $*;;
    *)
      if command -v pacman &> /dev/null; then
        sudo pacman -S $*
      elif command -v apt-get &> /dev/null; then
        sudo apt-get install $*
      else
        echo >&2 "Could not identify package manager."
        return
      fi;;
  esac
}

echo "The following utilities are not yet installed: $to_install"
read -t 2 -qs "response?Install them? "
echo
case "$response" in
  y)
    echo "Installing."
    install-util $to_install
    ;;
  *)
    echo "Skipping install."
    for binary pkg in ${(@kv)utils}; do
      if ! command -v $binary &> /dev/null; then
        eval "$binary() {
  echo \"$pkg is not yet installed.\"
  read -t 2 -qs \"response?Install now? \"
  echo
  case \"\$response\" in
    y)
      echo \"Installing.\"
      unset -f $binary
      install-util $pkg
      ;;
    *)
      echo \"Skipping install.\"
      ;;
  esac
}"
      fi
    done
    ;;
esac

unset utils
unset to_install
